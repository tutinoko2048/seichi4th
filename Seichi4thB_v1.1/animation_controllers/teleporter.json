{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.teleporter1": {
            "states": {
                "default": {
                    "transitions": [
                        {
                            "teleporter_using": "query.get_equipped_item_name =='teleporter' && query.is_using_item"
                        }
                    ]
                },
                "teleporter_using": {
                    "on_entry": [
                        "/function tp/teleporter_using"
                    ],
                    "transitions": [
                        {
                            "default": "query.get_equipped_item_name !='teleporter' || !query.is_using_item"
                        }
                    ]
                }
            }
        },
        "controller.animation.teleporter2": {
            "states": {
                "default": {
                    "transitions": [
                        {
                            "teleporter_sneaking": "query.get_equipped_item_name =='teleporter' && query.is_sneaking"
                        }
                    ]
                },
                "teleporter_sneaking": {
                    "on_entry": [
                        "/function teleporter/tp_sneaking"
                    ],
                    "transitions": [
                        {
                            "default": "query.get_equipped_item_name !='teleporter' || !query.is_sneaking"
                        }
                    ]
                }
            }
        }
    }
}