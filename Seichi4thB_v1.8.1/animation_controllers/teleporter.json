{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.teleporter1": {
            "states": {
                "default": {
                    "transitions": [
                        {
                            "teleporter_using": "query.get_equipped_item_name =='teleporter' && query.is_using_item"
                        },
                        {
                            "tp_lobby0": "query.get_equipped_item_name(0) =='tp_lobby' && query.is_sneaking"
                        },
                        {
                            "tp_shop0": "query.get_equipped_item_name(0) =='tp_shop' && query.is_sneaking"
                        },
                        {
                            "tp_lobby1": "query.get_equipped_item_name(1) =='tp_lobby' && query.is_sneaking"
                        },
                        {
                            "tp_shop1": "query.get_equipped_item_name(1) =='tp_shop' && query.is_sneaking"
                        }
                    ]
                },
                "teleporter_using": {
                    "on_entry": [
                        "/function tp/teleporter_using"
                    ],
                    "transitions": [
                        {
                            "default": "query.get_equipped_item_name !='teleporter' || !query.is_using_item"
                        }
                    ]
                },
                "tp_lobby0": {
                    "on_entry": [
                        "/function tp/lobby"
                    ],
                    "transitions": [
                        {
                            "default": "query.get_equipped_item_name(0) !='tp_lobby' || !query.is_sneaking"
                        }
                    ]
                },
                "tp_shop0": {
                    "on_entry": [
                        "/function tp/shop"
                    ],
                    "transitions": [
                        {
                            "default": "query.get_equipped_item_name(0) !='tp_shop' || !query.is_sneaking"
                        }
                    ]
                },
                "tp_lobby1": {
                    "on_entry": [
                        "/function tp/lobby"
                    ],
                    "transitions": [
                        {
                            "default": "query.get_equipped_item_name(1) !='tp_lobby' || !query.is_sneaking"
                        }
                    ]
                },
                "tp_shop1": {
                    "on_entry": [
                        "/function tp/shop"
                    ],
                    "transitions": [
                        {
                            "default": "query.get_equipped_item_name(1) !='tp_shop' || !query.is_sneaking"
                        }
                    ]
                }
            }
        },
        "controller.animation.teleporter2": {
            "states": {
                "default": {
                    "transitions": [
                        {
                            "teleporter_sneaking": "query.get_equipped_item_name =='teleporter' && query.is_sneaking"
                        }
                    ]
                },
                "teleporter_sneaking": {
                    "on_entry": [
                        "/function tp/teleporter_sneaking"
                    ],
                    "transitions": [
                        {
                            "default": "query.get_equipped_item_name !='teleporter' || !query.is_sneaking"
                        }
                    ]
                }
            }
        }
    }
}