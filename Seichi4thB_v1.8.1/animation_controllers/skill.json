{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.skill": {
            "states": {
                "default": {
                    "transitions": [
                        {
                            "sneaking": "query.get_equipped_item_name(1) == 'skill_item' && query.is_sneaking"
                        }
                    ]
                },
                "sneaking": {
                    "on_entry": [
                        "/function skill/haste_skill"
                    ],
                    "transitions": [
                        {
                            "default": "query.get_equipped_item_name(1) != 'skill_item' || !query.is_sneaking"
                        }
                    ]
                }
            }
        },
        "controller.animation.skill2": {
            "states": {
                "default": {
                    "transitions": [
                        {
                            "p_wooden_shovel": "query.get_equipped_item_name == 'p_wooden_shovel' && query.is_sneaking"
                        }
                    ]
                },
                "p_wooden_shovel": {
                    "on_entry": [
                        "/execute @s[tag=!cool_time] ~~~ function skill/break_skill"
                    ],
                    "transitions": [
                        {
                            "default": "query.get_equipped_item_name != 'p_wooden_shovel' || !query.is_sneaking"
                        }
                    ]
                }
            }
        },
        "controller.animation.skill3": {
            "states": {
                "default": {
                    "transitions": [
                        {
                            "attack": "( query.get_equipped_item_name == 'p_wooden_shovel' ) && variable.attack_time"
                        }
                    ]
                },
                "attack": {
                    "on_entry": [
                        "/execute @s[scores={break_skill=0..}] ~~~ function skill/attack"
                    ],
                    "transitions": [
                        {
                            "default": "( query.get_equipped_item_name != 'p_wooden_shovel' ) || !variable.attack_time"
                        }
                    ]
                }
            }
        }
    }
}