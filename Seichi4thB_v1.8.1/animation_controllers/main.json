{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.main": {
            "states": {
                "default": {
                    "transitions": [
                        {
                            "op_teleport": "query.get_equipped_item_name =='compass' && query.is_using_item"
                        }
                    ]
                },
                "op_teleport": {
                    "on_entry": [
                        "/execute @p ~~~ tp @s[tag=op] ^^^3",
                        "/execute @p ~~~ title @s[tag=!op] actionbar §l§c権限がないため使用できません",
                        "/execute @p ~~~ execute @s[tag=!op] ~~~ say §l§c@s §fがコンパスを使用しています",
                        "/execute @p ~~~ title @s[tag=op] actionbar §lテレポートしました"
                    ],
                    "transitions": [
                        {
                            "default": "query.get_equipped_item_name !='compass' || !query.is_using_item"
                        }
                    ]
                }
            }
        }
    }
}