{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.haste_remove": {
            "states": {
                "default": {
                    "transitions": [
                        {
                            "has_teleporter1": "query.get_equipped_item_name =='teleporter' "
                        }
                    ]
                },
                "has_teleporter1": {
                    "on_entry": [
                        "/tag @s add haste_remove"
                    ],
                    "transitions": [
                        {
                            "default": "query.get_equipped_item_name !='teleporter' "
                        },
                        {
                            "has_teleporter2": "query.get_equipped_item_name =='teleporter' "
                        }
                    ]
                },
                "has_teleporter2": {
                    "on_entry": [
                        "/tag @s add haste_remove"
                    ],
                    "transitions": [
                        {
                            "default": "query.get_equipped_item_name !='teleporter' "
                        },
                        {
                            "has_teleporter1": "query.get_equipped_item_name =='teleporter' "
                        }
                    ]
                }
            }
        }
    }
}